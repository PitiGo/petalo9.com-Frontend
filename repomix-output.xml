 }, [currentPage, apiUrl]);

 const handlePageChange = (newPage) => {
   setCurrentPage(newPage);
 };

 const handleDelete = (postId) => {
   const confirmDelete = window.confirm('¬øEst√°s seguro de que deseas eliminar este post?');
